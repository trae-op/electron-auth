{
  "appId": "com.myself.electron-auth",
  "files": ["dist-main", "dist-renderer"],
  "extraResources": [
    "dist-main/preload.cjs",
    "src/assets/**",
    "prisma/**/*",
    "node_modules/.prisma/**/*",
    "node_modules/@prisma/client/**/*"
  ],
  "mac": {
    "target": "dmg",
    "icon": "./src/assets/512x512.png",
    "identity": null
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": "nsis",
    "icon": "./src/assets/256x256.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "publish": [
    {
      "provider": "github",
      "owner": "trae-op",
      "repo": "electron-auth",
      "releaseType": "release"
    }
  ]
}
